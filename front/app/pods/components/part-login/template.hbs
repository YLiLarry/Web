<div class="modal" id="part-login">
    <div class="modal-dialog modal-sm login-wrapper">
        <div class="modal-content login-body">      
            <div class="form login-form">
                <h4 class="login-title"> 登录 </h4>
                <div class="form-group">
                    {{#input-group-highlight}}
                        <div class="input-group left {{invalidEmailCSS}}">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            {{input class="form-control" type="text" placeholder="邮箱" value=email}}
                        </div>
                    {{/input-group-highlight}}
                </div>
                <div class="form-group">
                    {{#input-group-highlight}}
                        <div class="input-group left {{invalidPasswordCSS}}">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                            </span>
                            {{input class="form-control" placeholder="密码" type="password" value=password}}
                        </div>
                    {{/input-group-highlight}}
                </div>
                {{#if message}}
                <div class="form-group text-danger">
                    <i class="glyphicon glyphicon-heart-empty"></i>
                    {{message}}
                </div>
                {{/if}}
                <div class="form-group">
                    <button class="btn btn-link" data-toggle='modal' data-target='#part-register'>新用户注册</button>
                    <button class="btn btn-primary pull-right" {{action 'login'}}>
                        登录
                    </button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


