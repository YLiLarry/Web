<div class="modal" id="part-register">
    <div class="modal-dialog">
        <div class="modal-content register-content">
            <h4> 
                注册账号 
                <span class="pull-right"> 
                    {{#link-to 'login' class="small"}} 已有账号? 直接登录 >> {{/link-to}}
                </span>
            </h4>
            
            <hr>
            
            <form>
                
                <h5> 必填信息 </h5>
                
                <div class="form-group row">
                    <div class="col-sm-13">
                        {{#input-group-highlight}}
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            {{input value=username focus-out="checkUsername" class="form-control" placeholder="用户名"}}
                        </div>
                        {{/input-group-highlight}}
                    </div>
                    <div class="col-sm-7 message">
                        {{#if usernameMsg}}
                            <span class="{{if usernameValid 'text-success' 'text-danger'}}">
                                <i class="glyphicon {{if usernameValid 'glyphicon-ok' 'glyphicon-remove'}}"></i>
                                {{usernameMsg}}
                            </span>
                        {{else}}
                            其他人会看到这个名字
                        {{/if}}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-13">
                        {{#input-group-highlight}}
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-envelope"></i>
                            </span>
                            {{input value=email focus-out="checkEmail" class="form-control" placeholder="邮箱"}}
                        </div>
                        {{/input-group-highlight}}
                    </div>
                    <div class="col-sm-7 message">
                        {{#if emailMsg}}
                            <span class="{{if emailValid 'text-success' 'text-danger'}}">
                                <i class="glyphicon {{if emailValid 'glyphicon-ok' 'glyphicon-remove'}}"></i>
                                {{emailMsg}}
                            </span>
                        {{else}}
                            注册邮箱不会被其他人看到
                        {{/if}}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-13">
                        {{#input-group-highlight}}
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                            </span>
                            {{input value=password focus-out="checkPassword" class="form-control" placeholder="密码"}}
                        </div>
                        {{/input-group-highlight}}
                    </div>
                    <div class="col-sm-7 message">
                        {{#if passwordMsg}}
                            <span class="{{if passwordValid 'text-success' 'text-danger'}}">
                                <i class="glyphicon {{if passwordValid 'glyphicon-ok' 'glyphicon-remove'}}"></i>
                                {{passwordMsg}}
                            </span>
                        {{else}}
                            长度至少为6个字符
                        {{/if}}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-13">
                        {{#input-group-highlight}}
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-lock"></i>
                            </span>
                            {{input value=password2 focus-out="checkPassword2" class="form-control" placeholder="再输入一次密码"}}
                        </div>
                        {{/input-group-highlight}}
                    </div>
                    <div class="col-sm-7 message">
                        {{#if password2Msg}}
                            <span class="{{if password2Valid 'text-success' 'text-danger'}}">
                                <i class="glyphicon {{if password2Valid 'glyphicon-ok' 'glyphicon-remove'}}"></i>
                                {{password2Msg}}
                            </span>
                        {{else}}
                            密码必须一致
                        {{/if}}
                    </div>
                </div>
                
                <hr>
                
                <div class="form-group row">
                    <div class="col-sm-20">
                        <button class="btn btn-block btn-success">完成注册</button>
                    </div>
                </div>
                
